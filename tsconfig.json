{
  "compilerOptions": {
    "strict": true,
    // "outDir": "dist",
    "outFile": "dist/app.js",
    "module": "system",
    "target": "es5",
    "jsx" :  "react",
    "lib": [
      "es2015",
      "es2016.array.include",
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "isolatedModules": false,
    "pretty": true,
    "allowJs": true,
    "importHelpers": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "types": []
}
